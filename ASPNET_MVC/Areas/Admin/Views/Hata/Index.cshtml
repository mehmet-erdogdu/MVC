@model IEnumerable<ASPNET_MVC.Models.EntitiyFramework.ELMAH_Error>

@{
    ViewBag.Title = "Hata Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Elmah Hata Loglama Sistemi</h2>
<div class="card mb-3">
    <div class="card-header text-danger">
        <i class="fa fa-table"></i> Elmah Hata Listesi
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="tblHata">
                <thead>
                    <tr>
                        <th>İşlemler</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Message)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.User)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StatusCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Host)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TimeUtc)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Type)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Source)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Sequence)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Application)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AllXml)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink("Detaylar", "Details", new { id = item.ErrorId }, new { @class = "btn btn-primary" })
                                <br />
                                <br />
                                <a class="btn btn-warning Btn_hata_sil" data-id="@item.ErrorId">Direk Sil</a>
                                <br />
                                <br />
                                @Html.ActionLink("Sil", "Delete", new { id = item.ErrorId }, new { @class = "btn btn-danger" })
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Message)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StatusCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Host)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TimeUtc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Source)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sequence)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Application)
                            </td>
                            <td>
                                @*@Html.DisplayFor(modelItem => item.AllXml)*@
                                XML ayrıntı için detaylara bakın
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Son görüntüleme : @DateTime.Now</div>
</div>