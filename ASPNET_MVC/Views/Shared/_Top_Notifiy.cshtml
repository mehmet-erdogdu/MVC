<!-- Kapatma Penceresi -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Oturum İşlemleri</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">x</span>
                </button>
            </div>
            <div class="modal-body">Oturumu güvenle açıp kapatabilirsiniz</div>
            <div class="modal-footer">
                @if (User.Identity.Name != "")
                {<a class="btn btn-danger" href="/Oturumu_kapat" onclick="ajax_loading()">Oturumu Kapat</a>}
                else
                {<a class="btn btn-success" href="/Oturumu_ac" onclick="ajax_loading()">Oturumu Aç</a>}
                <button class="btn btn-default" type="button" data-dismiss="modal">İptal</button>
            </div>
        </div>
    </div>
</div>
